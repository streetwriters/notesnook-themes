      "success": {
        "accent": "#4ca3ff",
        "paragraph": "#4ca3ff",
        "background": "#132204",
        "border": "#13131a",
        "heading": "#4ca3ff",
        "icon": "#4ca3ff",
        "separator": "#13131a",
        "placeholder": "#404040",
        "hover": "#ffffff10",
        "shade": "#4ca3ff12",
        "backdrop": "#35353580",
        "textSelection": "#4F8A1055"
      }
    },
    "statusBar": {
      "primary": {
        "paragraph": "#818589"
      }
    },
    "list": {
      "primary": {
        "background": "#20202b",
        "hover": "#313142"
      },
      "selected": {
        "background": "#313142"
      }
    },
    "editor": {
      "primary": {
        "paragraph": "#d8d8d8",
        "background": "#20202b",
        "placeholder": "#818589",
        "shade": "#4ca3ff50"
      },
      "secondary": {
        "paragraph": "#d8d8d8",
        "placeholder": "#d8d8d8"
      }
    },
    "editorToolbar": {
      "primary": {
        "hover": "#20202b"
      },
      "secondary": {
        "hover": "#20202b"
      }
    },
    "dialog": {
      "primary": {
        "shade": "#4ca3ff50"
      }
    },
    "navigationMenu": {
      "primary": {
        "background": "#313142",
        "hover": "#20202b"
      },
      "selected": {
        "background": "#20202b",
        "hover": "#20202b"
      }
    },
    "contextMenu": {
      "primary": {
        "background": "#20202b",
        "hover": "#313142"
      }
    },
    "sheet": {
      "primary": {
        "accent": "#4ca3ff",
        "shade": "#4ca3ff12"
      }
    }
  }
}
