{
  "$schema": "https://raw.githubusercontent.com/streetwriters/notesnook-themes/main/schemas/v1.schema.json",
  "name": "Midnight",
  "id": "midnight",
  "version": 1.3,
  "license": "MIT",
  "homepage": "https://notesnook.com",
  "description": "A dark theme inspired by the SN Midnight theme",
  "colorScheme": "dark",
  "compatibilityVersion": 1,
  "authors": [
    {
      "name": "Aaron Graves",
      "email": "notesnook@hkknmd.com"
    }
  ],
  "scopes": {
    "base": {
      "primary": {
        "accent": "#4ca3ff",
        "paragraph": "#d8d8d8",
        "background": "#292937",
        "border": "#13131a",
        "heading": "#e3e3e3",
        "icon": "#808080",
        "separator": "#13131a",
        "placeholder": "#404040",
        "hover": "#2b2b2b",
        "shade": "#4ca3ff12",
        "backdrop": "#35353580",
        "textSelection": "#4ca3ff"
      },
      "secondary": {
        "accent": "#4ca3ff",
        "paragraph": "#818589",
        "background": "#313142",
        "border": "#202020",
        "heading": "#808080",
        "icon": "#808080",
        "separator": "#13131a",
        "placeholder": "#404040",
        "hover": "#ffffff10",
        "shade": "#4ca3ff12",
        "backdrop": "#35353580",
        "textSelection": "#4ca3ff"
      },
      "disabled": {
        "accent": "#4ca3ff",
        "paragraph": "#505050",
        "background": "#ffffff",
        "border": "#13131a",
