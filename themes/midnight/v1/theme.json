        "icon": "#808080",
        "separator": "#13131a",
        "placeholder": "#404040",
        "hover": "#ffffff10",
        "shade": "#4ca3ff12",
        "backdrop": "#35353580",
        "textSelection": "#4ca3ff"
      },
      "selected": {
        "accent": "#4ca3ff",
        "paragraph": "#D3D3D3",
        "background": "#313142",
        "border": "#4ca3ff",
        "heading": "#e3e3e3",
        "icon": "#4ca3ff",
        "separator": "#13131a",
        "placeholder": "#404040",
        "hover": "#ffffff10",
        "shade": "#4ca3ff12",
        "backdrop": "#35353580",
        "textSelection": "#4ca3ff"
      },
      "error": {
        "accent": "#f54b42",
        "paragraph": "#f54b42",
        "background": "#250b0a",
        "border": "#13131a",
        "heading": "#f54b42",
        "icon": "#f54b42",
        "separator": "#13131a",
        "placeholder": "#404040",
        "hover": "#ffffff10",
        "shade": "#4ca3ff12",
        "backdrop": "#35353580",
        "textSelection": "#f54b4255"
