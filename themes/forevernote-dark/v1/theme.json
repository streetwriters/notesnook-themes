    "statusBar": {
      "primary": {
        "background": "#000000"
      }
    },
    "list": {
      "selected": {
        "background": "#202020"
      }
    },
    "editor": {
      "primary": {
        "background": "#262626"
      }
    },
    "editorToolbar": {
      "primary": {
        "background": "#000000"
      }
    },
    "navigationMenu": {
      "primary": {
        "background": "#000000"
      }
    },
    "contextMenu": {
      "primary": {
        "background": "#202020"
      }
    },
    "sheet": {
      "selected": {
        "paragraph": "#008837"
      }
    }
  }
