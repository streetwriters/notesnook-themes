        "heading": "#D9D9D9",
        "icon": "#666666",
        "separator": "#000000",
        "placeholder": "#737373",
        "hover": "#111111",
        "accentForeground": "#1A1A1A",
        "backdrop": "#000000bb"
      },
      "secondary": {
        "accent": "#008523",
        "paragraph": "#6f6f6f",
        "background": "#202020",
        "border": "#2b2b2b",
        "heading": "#808080",
        "icon": "#808080",
        "separator": "#383838",
        "placeholder": "#404040",
        "hover": "#ffffff10",
        "accentForeground": "#ffffff",
        "backdrop": "#35353580"
