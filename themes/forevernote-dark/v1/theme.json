      "disabled": {
        "accent": "#008837",
        "paragraph": "#505050",
        "background": "#ffffff",
        "border": "#383838",
        "heading": "#212121",
        "icon": "#808080",
        "separator": "#383838",
        "placeholder": "#404040",
        "hover": "#ffffff10",
        "accentForeground": "#ffffff",
        "backdrop": "#35353580"
      },
      "selected": {
        "accent": "#008837",
        "paragraph": "#F2F2F2",
        "background": "#262626",
        "border": "#008837",
        "heading": "#e3e3e3",
        "icon": "#008837",
        "separator": "#383838",
        "placeholder": "#404040",
        "hover": "#ffffff10",
        "accentForeground": "#ffffff",
        "backdrop": "#35353580"
      },
      "error": {
        "accent": "#f54b42",
        "paragraph": "#f54b42",
        "background": "#250b0a",
        "border": "#383838",
        "heading": "#f54b42",
        "icon": "#f54b42",
        "separator": "#383838",
        "placeholder": "#404040",
        "hover": "#ffffff10",
        "accentForeground": "#ffffff",
        "backdrop": "#35353580"
      },
      "success": {
        "accent": "#4F8A10",
        "paragraph": "#4F8A10",
        "background": "#132204",
        "border": "#383838",
